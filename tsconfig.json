{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    // import (require() module.export_ = common js
    "allowSyntheticDefaultImports": true,
    // if no exists default export
    // import * as smth from 'smw' -> import smth from 'smw'
    "esModuleInterop": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}